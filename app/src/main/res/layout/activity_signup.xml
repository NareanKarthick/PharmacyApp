<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context=".signup">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:gravity="center"
        android:padding="20dp"
        android:text="Sign up"
        android:textColor="#1A517C"
        android:textColorHint="@color/teal_200"
        android:textSize="34sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/namebox"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_below="@+id/textView1"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="#168DC5"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="@color/teal_200"
        android:textColorHighlight="#5C00FF"
        android:textColorHint="@color/teal_200" />

    <EditText
        android:id="@+id/mailid"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_below="@+id/namebox"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="#168DC5"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textColor="@color/teal_200"
        android:textColorHighlight="#5C00FF"
        android:textColorHint="@color/teal_200" />

    <EditText
        android:id="@+id/userpassword"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_below="@+id/mailid"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="#168DC5"
        android:drawableLeft="@drawable/ic_baseline_remove_red_eye_24"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="User Password"
        android:inputType="textPersonName"
        android:textColor="@color/teal_200"
        android:textColorHighlight="#5C00FF"
        android:textColorHint="@color/teal_200" />

    <EditText
        android:id="@+id/age"
        android:layout_width="110dp"
        android:layout_height="43dp"
        android:layout_below="@+id/userpassword"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="#168DC5"
        android:drawableLeft="@drawable/ic_baseline_date_range_24"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Age"
        android:inputType="number"
        android:textColor="@color/teal_200"
        android:textColorHighlight="#5C00FF"
        android:textColorHint="@color/teal_200" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userpassword"
        android:layout_marginStart="180dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#168DC5"
            android:drawablePadding="20dp"
            android:ems="10"
            android:gravity="center"
            android:text="Gender"
            android:textColor="@color/teal_200"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textColor="#1A517C"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textColor="#1A517C"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Others"
            android:textColor="#1A517C"
            android:textStyle="bold" />
    </RadioGroup>

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_below="@+id/userpassword"
        android:layout_marginStart="30dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="#168DC5"
        android:drawableLeft="@drawable/ic_baseline_location_on_24"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        android:textColor="@color/teal_200"
        android:textColorHighlight="#5C00FF"
        android:textColorHint="@color/teal_200" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/teal_200"
        android:onClick="details"
        android:text="SUBMIT" />
</RelativeLayout>